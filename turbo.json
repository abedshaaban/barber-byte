{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["NEXT_PUBLIC_DB_URL_APIS", "NEXT_PUBLIC_IMAGES_URL"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NEXT_PUBLIC_DB_URL_APIS", "NEXT_PUBLIC_IMAGES_URL"]
    },
    "clean": {
      "cache": false
    }
  }
}
